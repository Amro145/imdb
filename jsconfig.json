{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [],
    "typeRoots": [],
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/node_modules/*",
    ".next",
    "out"
  ],
  "include": [
    "src"
  ]
}